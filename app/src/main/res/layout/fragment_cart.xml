<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".fragments.CartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBackAddToCart"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="center"
            android:layout_marginLeft="10sp"
            android:src="@drawable/left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:layout_marginRight="20sp"
        android:layout_margin="20sp"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginLeft="20sp"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff0000"
            android:text="*"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerSize"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/black_boundry"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"></Spinner>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QTY" />

    <EditText
        android:id="@+id/etQty"
        android:layout_width="70sp"
        android:layout_height="50sp"
        android:text="1"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/black_boundry"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:textAllCaps="false"
        android:background="#000"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Add To Cart"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivSizeInfo"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/add"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Size Information"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSizeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:visibility="gone"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="20sp"
        android:text="Fits true to size, take your normal size - Intended for a relaxed fit - Lightweight knit - Model is 177"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivAdditionalInfo"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/add"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Additional Description"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:visibility="gone"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="20sp"
        android:text="Fits true to size, take your normal size - Intended for a relaxed fit - Lightweight knit - Model is 177"/>
</LinearLayout>