<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".fragments.CartListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBackCartList"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="center"
            android:layout_marginLeft="10sp"
            android:src="@drawable/left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTotalItem"
        android:layout_width="0sp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="No Of Item"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000"
      />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart Sub Total : "
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200"
            android:layout_marginLeft="10sp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:background="#000"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Checkout"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_marginRight="20sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCartList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"></android.support.v7.widget.RecyclerView>
</LinearLayout>